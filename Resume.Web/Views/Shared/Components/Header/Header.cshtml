@using Resume.Business.Convertors
@using Resume.Bussines.Tools
@model Resume.Data.ViewModels.AboutMe.AdminSiteEditAboutMeViewModel

<header class="header box">
    <div class="header__left">
        <div class="header__photo">
            <img class="header__photo-img" src="@SiteTools.AboutMeAvatar@Model.ImageName" alt="Ronald Robertson">
        </div>
        <div class="header__base-info">
            <h4 class="title titl--h4">@Model.FirstName @Model.LastName</h4>
            @if (!string.IsNullOrEmpty(Model.Position))
            {
                <div class="status">@Model.Position</div>
            }
            <ul class="header__social">
                <li><a href="https://www.facebook.com/"><i class="font-icon icon-facebook1"></i></a></li>
                <li><a href="https://www.twitter.com/"><i class="font-icon icon-twitter1"></i></a></li>
                <li><a href="https://www.instagram.com/"><i class="font-icon icon-instagram1"></i></a></li>
            </ul>
        </div>
    </div>
    <div class="header__right">
        <ul class="header__contact">
            <li><span class="overhead">ایمیل</span>@Model.Mobile</li>
            <li><span class="overhead">تلفن</span>@Model.Email</li>
        </ul>
        <ul class="header__contact">
            @if (Model.BirthDate.HasValue)
            {
                <li><span class="overhead">تولد</span>@Model.BirthDate.Value.ToShamsi()</li>
            }
            @if (!string.IsNullOrEmpty(@Model.Location))
            {
                <li><span class="overhead">مکان تولد</span>@Model.Location</li>
            }
        </ul>
    </div>
</header>

