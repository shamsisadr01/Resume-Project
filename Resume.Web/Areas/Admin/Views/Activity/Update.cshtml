@model Resume.Data.ViewModels.Activity.EditActivityViewModel

@{
    ViewData["Title"] = "<ویرایش فعالیت";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="ID"/>
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="Title" class="form-control">
                                    <label class="form-label active" asp-for="Title"></label>
                                    <span asp-validation-for="Title"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="Icon" class="form-control">
                                    <label class="form-label active" asp-for="Icon"></label>
                                    <span asp-validation-for="Icon"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <textarea class="form-control" asp-for="Description"></textarea>
                                    <label class="form-label active" asp-for="Description"></label>
                                    <span asp-validation-for="Description"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-warning btn-lg m-l-15 waves-effect">ویرایش</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
