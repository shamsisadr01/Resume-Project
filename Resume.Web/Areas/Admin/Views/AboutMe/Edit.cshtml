@model Resume.Data.ViewModels.AboutMe.AdminSiteEditAboutMeViewModel

@{
    ViewData["Title"] = "<ویرایش کاربر";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageName" />
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="FirstName" class="form-control">
                                    <label class="form-label active" asp-for="FirstName"></label>
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="LastName" class="form-control">
                                    <label class="form-label active" asp-for="LastName"></label>
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="Email" class="form-control">
                                    <label class="form-label active" asp-for="Email"></label>
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="Mobile" class="form-control">
                                    <label class="form-label active" asp-for="Mobile"></label>
                                    <span asp-validation-for="Mobile"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="Position" class="form-control">
                                    <label class="form-label active" asp-for="Position"></label>
                                    <span asp-validation-for="Position"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="Location" class="form-control">
                                    <label class="form-label active" asp-for="Location"></label>
                                    <span asp-validation-for="Location"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <textarea asp-for="Bio" class="form-control"></textarea>
                                    <label class="form-label active" asp-for="Bio"></label>
                                    <span asp-validation-for="Bio"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="date" asp-for="BirthDate" class="form-control">
                                    <label class="form-label active" asp-for="BirthDate"></label>
                                    <span asp-validation-for="BirthDate"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="file" asp-for="Avatar" class="form-control">
                                    <label class="form-label active" asp-for="Avatar"></label>
                                    <span asp-validation-for="Avatar"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-warning btn-lg m-l-15 waves-effect">ویرایش</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

