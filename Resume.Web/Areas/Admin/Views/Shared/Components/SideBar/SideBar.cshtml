                    <ul class="ml-menu" style="display: block;">
                        <li class="active">
                            <a  asp-area="Admin" asp-action="List" asp-controller="User" >لیست کاربران</a>
                        </li>
                        <li class="active">
                            <a  asp-area="Admin" asp-action="Create" asp-controller="User" >افزودن کاربر </a>
