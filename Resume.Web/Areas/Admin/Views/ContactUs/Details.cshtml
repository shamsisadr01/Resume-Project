@model Resume.Data.ViewModels.ContactUs.ContactUsDetailViewModels

@{
    ViewData["Title"] = "جزییات تماس با ما";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form asp-action="Details" method="post">
                    <input type="hidden" asp-for="ContactUsId"/>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="Title" readonly class="form-control">
                                    <label class="form-label active" asp-for="Title"></label>
                                    <span asp-validation-for="Title"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="FirstName" readonly="" class="form-control">
                                    <label class="form-label active" asp-for="FirstName"></label>
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="LastName" readonly="" class="form-control">
                                    <label class="form-label active" asp-for="LastName"></label>
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="Email" readonly="" class="form-control">
                                    <label class="form-label active" asp-for="Email"></label>
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group form-float">
                                <div class="form-line focused">
                                    <input type="text" asp-for="PhoneNumber" readonly="" class="form-control">
                                    <label class="form-label active" asp-for="PhoneNumber"></label>
                                    <span asp-validation-for="PhoneNumber"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <textarea class="form-control" readonly="" asp-for="Description">
                                        @Model.Description
                                    </textarea>
                                    <label class="form-label" asp-for="Description"></label>
                                    <span asp-validation-for="Description"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <textarea class="form-control" asp-for="Answer">
                                        @Model.Answer
                                    </textarea>
                                    <label class="form-label" asp-for="Answer"></label>
                                    <span asp-validation-for="Answer"></span>
                                </div>
                            </div>
                        </div>
                        @if (string.IsNullOrEmpty(@Model.Answer))
                        {
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-success btn-lg m-l-15 waves-effect">ثبت پاسخ</button>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
